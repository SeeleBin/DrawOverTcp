<Window x:Class="PaintTcp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaintTcp"
        mc:Ignorable="d"
        Title="Login" Height="118.532" Width="352.5">
    <Grid Margin="0,0,2,-21">
        <Label Content="Insert IP" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="78" Margin="6,6,0,0"/>
        <Label Content="Insert port" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="78" Margin="6,42,0,0"/>
        <TextBox x:Name="IPTxt" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="112,6,0,0" Text="127.0.0.1"/>
        <TextBox x:Name="PortTxt" HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="112,46,0,0" Text="55000"/>
        <Button x:Name="InfoGather" Content="Enter" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="258,10,0,0" Height="58" Click="InfoGather_Click"/>
        <Label x:Name="waitInfo" Content="Waiting for connection ..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,73,0,0" Visibility="Hidden"/>

    </Grid>
</Window>
