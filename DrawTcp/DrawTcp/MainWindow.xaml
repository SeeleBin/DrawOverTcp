<Window x:Class="DrawTcp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawTcp"
        mc:Ignorable="d"
        Title="DrawOverTCP" Height="482" Width="808" ResizeMode="NoResize">
    <Grid x:Name="MainGrid" Margin="0,0,4,-19" >
        <Grid.RowDefinitions>
            <RowDefinition Height="308*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Canvas x:Name="drawingCanvas" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="538" Margin="256,23,0,0"  Background="White"/>
        <Label Content="Insert your guess here!" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0" Width="210" Height="39" FontSize="20"/>
        <TextBox x:Name="GuessTxt" HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Margin="10,377,0,0" FontSize="20"/>
        <ListBox x:Name="OldwordsTxt" HorizontalAlignment="Left" Height="328" VerticalAlignment="Top" Width="210" Margin="10,44,0,0"/>
        <Button x:Name="checkAnswBtn" Content="Check you answer!" HorizontalAlignment="Left" Margin="10,415,0,0" VerticalAlignment="Top" Width="210" Height="32" Click="checkAnswBtn_Click"/>
    </Grid>
</Window>
